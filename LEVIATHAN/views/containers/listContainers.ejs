<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>All Containers</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-sA+e2m8kCw5xvQqv3n3wQ0Q8wqjvKqfVY5C1o0t+7r0=" crossorigin=""/>
  <style>
    body{font-family: Arial, Helvetica, sans-serif; margin: 0; padding: 0}
    #map { height: 400px; }
    table { width: 100%; border-collapse: collapse; margin-top: 12px }
    th, td { padding: 8px; border: 1px solid #ddd; text-align: left }
    th { background:#f4f4f4 }
  </style>
</head>
<body>
  <h1>Containers</h1>

  <div id="map"></div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Code</th>
        <th>Driver</th>
        <th>Phone</th>
        <th>Available / Total</th>
        <th>Cost / Section</th>
        <th>Location (lat, lng)</th>
      </tr>
    </thead>
    <tbody>
      <% containers.forEach(function(c){ %>
        <tr>
          <td><%= c.container_id %></td>
          <td><%= c.container_code || '' %></td>
          <td><%= c.driver_name || '' %></td>
          <td><%= c.driver_phone || '' %></td>
          <td><%= c.available_sections %> / <%= c.total_sections %></td>
          <td><%= c.cost_per_section %></td>
          <td><%= c.current_latitude %>, <%= c.current_longitude %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-o9N1j6wZp7rG0bFfY7O2+6c1fQd8m8b6Yf2Gk3G+7hM=" crossorigin=""></script>
  <script>
    const containers = <%- JSON.stringify(containers || []) %>;

    // initialize map with sensible default
    const map = L.map('map');

    // default center: first container or India center
    if (containers.length > 0 && containers[0].current_latitude && containers[0].current_longitude) {
      map.setView([containers[0].current_latitude, containers[0].current_longitude], 6);
    } else {
      map.setView([20.5937, 78.9629], 5);
    }

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    containers.forEach(c => {
      const lat = parseFloat(c.current_latitude);
      const lng = parseFloat(c.current_longitude);
      if (!isNaN(lat) && !isNaN(lng)) {
        const marker = L.marker([lat, lng]).addTo(map);
        const popup = `<strong>${(c.container_code||'Container')}</strong><br/>Driver: ${c.driver_name||''}<br/>Avail: ${c.available_sections}/${c.total_sections}`;
        marker.bindPopup(popup);
      }
    });
  </script>
</body>
</html>
