<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Driver - Delivery Partner</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }
        .register-container {
            background: white;
            padding: 45px;
            border-radius: 20px;
            box-shadow: 0 25px 70px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 600px;
            opacity: 0;
            transform: translateY(30px);
        }
        h1 {
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
            font-size: 32px;
            font-weight: 800;
        }
        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 15px;
            font-weight: 500;
        }
        .form-group {
            margin-bottom: 22px;
        }
        label {
            display: block;
            margin-bottom: 10px;
            color: #333;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        input {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: #fafafa;
        }
        input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }
        input:hover {
            border-color: #b0b8ea;
        }
        .btn {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            margin-top: 10px;
        }
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
        }
        .error {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            border: none;
            color: white;
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            font-size: 14px;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }
        .success {
            background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
            border: none;
            color: white;
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            font-size: 14px;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(81, 207, 102, 0.3);
        }
        .links {
            margin-top: 24px;
            text-align: center;
            font-size: 14px;
            font-weight: 500;
        }
        .links a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            position: relative;
        }
        .links a:after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: #667eea;
            transition: width 0.3s;
        }
        .links a:hover:after {
            width: 100%;
        }
        .note {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border: 2px solid #64b5f6;
            padding: 16px;
            border-radius: 12px;
            margin-bottom: 24px;
            font-size: 13px;
            color: #1976d2;
            font-weight: 500;
            box-shadow: 0 2px 10px rgba(100, 181, 246, 0.2);
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        #map {
            height: 400px;
            width: 100%;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 2px solid #e0e0e0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .map-instruction {
            background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%);
            border: 2px solid #ffc107;
            padding: 14px;
            border-radius: 12px;
            margin-bottom: 20px;
            font-size: 13px;
            color: #856404;
            font-weight: 500;
            text-align: center;
        }
        .coordinates-display {
            background: #f8f9fa;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            font-weight: 600;
            color: #495057;
            text-align: center;
        }
        @media (max-width: 600px) {
            .form-row { grid-template-columns: 1fr; }
            .register-container { padding: 30px 25px; }
            #map { height: 300px; }
        }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>
    <div class="register-container">
        <h1>üöö Register Driver</h1>
        <p class="subtitle">Create a new driver account</p>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="success"><%= success %></div>
        <% } %>
        
        <div class="note">
            üìù Your default password will be "driver". Use this password to login after registration.
        </div>
        
        <form method="POST" action="/auth/register/driver" id="registerForm">
            <div class="form-group">
                <label for="driver_name">üë§ Driver Name *</label>
                <input type="text" id="driver_name" name="driver_name" required placeholder="Enter driver's full name">
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="email">üìß Email Address *</label>
                    <input type="email" id="email" name="email" required placeholder="driver@example.com">
                </div>
                
                <div class="form-group">
                    <label for="driver_phone">üì± Phone Number *</label>
                    <input type="tel" id="driver_phone" name="driver_phone" required placeholder="9XXXXXXXXX">
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="container_code">üöö Container Code *</label>
                    <input type="text" id="container_code" name="container_code" required placeholder="C-XXX">
                </div>
                
                <div class="form-group">
                    <label for="total_sections">üì¶ Total Sections *</label>
                    <input type="number" id="total_sections" name="total_sections" required min="1" max="50" value="20">
                </div>
            </div>
            
            <div class="form-group">
                <label for="cost_per_section">üí∞ Cost Per Section (‚Çπ) *</label>
                <input type="number" id="cost_per_section" name="cost_per_section" required min="0" step="0.01" value="100">
            </div>
            
            <div class="map-instruction">
                üìç Click on the map to select the container's current location
            </div>
            
            <div class="coordinates-display" id="coordinatesDisplay">
                Selected Location: <span id="selectedCoords">Click on map to select</span>
            </div>
            
            <div id="map"></div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="current_latitude">üåç Latitude *</label>
                    <input type="number" id="current_latitude" name="current_latitude" required step="0.000001" placeholder="11.016844" readonly>
                </div>
                
                <div class="form-group">
                    <label for="current_longitude">üåç Longitude *</label>
                    <input type="number" id="current_longitude" name="current_longitude" required step="0.000001" placeholder="76.955833" readonly>
                </div>
            </div>
            
            <button type="submit" class="btn">üöÄ Register Driver & Container</button>
        </form>
        
        <div class="links">
            Already have an account? <a href="/auth/login">Login here</a>
        </div>
        
        <div class="links" style="margin-top: 10px;">
            <a href="/">‚Üê Back to Home</a>
        </div>
    </div>
    
    <%- include('../partials/loading') %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script>
        // Initialize map
        const map = L.map('map').setView([11.0168, 76.9558], 8);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '¬© OpenStreetMap contributors',
            maxZoom: 18
        }).addTo(map);
        
        let marker = null;
        
        // Handle map clicks
        map.on('click', function(e) {
            const lat = e.latlng.lat.toFixed(6);
            const lng = e.latlng.lng.toFixed(6);
            
            // Update input fields
            document.getElementById('current_latitude').value = lat;
            document.getElementById('current_longitude').value = lng;
            
            // Update display
            document.getElementById('selectedCoords').textContent = `${lat}, ${lng}`;
            
            // Remove existing marker
            if (marker) {
                map.removeLayer(marker);
            }
            
            // Add new marker
            marker = L.marker([lat, lng]).addTo(map)
                .bindPopup(`üìç Location: ${lat}, ${lng}`)
                .openPopup();
        });
        
        // Page load animation
        gsap.to('.register-container', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: 'power3.out'
        });
        
        // Stagger form groups
        gsap.from('.form-group', {
            opacity: 0,
            y: 20,
            duration: 0.5,
            stagger: 0.05,
            ease: 'power2.out',
            delay: 0.3
        });
        
        // Form submission with loading
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            showLoading('Creating Account', 'Registering driver and container...');
            setTimeout(() => this.submit(), 800);
        });
        
        // Input animations
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                gsap.to(this, { scale: 1.02, duration: 0.3, ease: 'back.out(1.7)' });
            });
            input.addEventListener('blur', function() {
                gsap.to(this, { scale: 1, duration: 0.3 });
            });
        });
        
        // Button hover
        const btn = document.querySelector('.btn');
        btn.addEventListener('mouseenter', () => {
            gsap.to(btn, { scale: 1.05, duration: 0.3, ease: 'back.out(1.7)' });
        });
        btn.addEventListener('mouseleave', () => {
            gsap.to(btn, { scale: 1, duration: 0.3 });
        });
    </script>
</body>
</html>
