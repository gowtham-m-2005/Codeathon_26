    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <!-- GSAP Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script>
        gsap.registerPlugin(ScrollTrigger);

        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

        // Prepare data
        const producers = <%- JSON.stringify(producers || []) %>;
        const totalProducers = producers.length;
        const withEmail = producers.filter(p => p.email).length;
        const withPhone = producers.filter(p => p.phone).length;
        const withLocation = producers.filter(p => p.inventory_latitude && p.inventory_longitude).length;
        const withoutEmail = totalProducers - withEmail;
        const withoutPhone = totalProducers - withPhone;
        const withoutLocation = totalProducers - withLocation;
        const withBothContacts = producers.filter(p => p.email && p.phone).length;

        // Chart.js default config
        Chart.defaults.color = '#94a3b8';
        Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.1)';
        Chart.defaults.font.family = 'Inter, sans-serif';

        // Verification Status Chart (Doughnut)
        const verificationCtx = document.getElementById('verificationChart');
        const verificationChart = new Chart(verificationCtx, {
            type: 'doughnut',
            data: {
                labels: ['Verified Email', 'Verified Phone', 'Both Verified', 'Not Verified'],
                datasets: [{
                    data: [withEmail - withBothContacts, withPhone - withBothContacts, withBothContacts, totalProducers - withEmail - withPhone + withBothContacts],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(139, 92, 246, 0.8)',
                        'rgba(100, 116, 139, 0.5)'
                    ],
                    borderColor: [
                        'rgba(59, 130, 246, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(139, 92, 246, 1)',
                        'rgba(100, 116, 139, 0.8)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(10, 14, 39, 0.95)',
                        padding: 12,
                        cornerRadius: 8,
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 }
                    }
                },
                animation: {
                    animateRotate: true,
                    animateScale: true,
                    duration: 2000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // Location Coverage Chart (Polar Area)
        const locationCtx = document.getElementById('locationChart');
        const locationChart = new Chart(locationCtx, {
            type: 'polarArea',
            data: {
                labels: ['With Coordinates', 'Missing Location'],
                datasets: [{
                    data: [withLocation, withoutLocation],
                    backgroundColor: [
                        'rgba(16, 185, 129, 0.7)',
                        'rgba(239, 68, 68, 0.5)'
                    ],
                    borderColor: [
                        'rgba(16, 185, 129, 1)',
                        'rgba(239, 68, 68, 0.8)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(10, 14, 39, 0.95)',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                scales: {
                    r: {
                        ticks: { display: false },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                },
                animation: {
                    duration: 2000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // Timeline Chart (Line) - Simulated growth
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
        const timelineData = totalProducers > 0 
            ? months.map((_, i) => Math.floor(totalProducers * (i + 1) / 6))
            : [0, 0, 0, 0, 0, 0];

        const timelineCtx = document.getElementById('timelineChart');
        const timelineChart = new Chart(timelineCtx, {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Producers Added',
                    data: timelineData,
                    borderColor: 'rgba(59, 130, 246, 1)',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 6,
                    pointBackgroundColor: 'rgba(59, 130, 246, 1)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointHoverRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(10, 14, 39, 0.95)',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(255, 255, 255, 0.05)' },
                        ticks: { font: { size: 11 } }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { font: { size: 11 } }
                    }
                },
                animation: {
                    duration: 2000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // Data Completeness Chart (Radar)
        const completenessCtx = document.getElementById('completenessChart');
        const completenessChart = new Chart(completenessCtx, {
            type: 'radar',
            data: {
                labels: ['Name', 'Email', 'Phone', 'Location', 'Active'],
                datasets: [{
                    label: 'Completeness %',
                    data: [
                        100,
                        totalProducers > 0 ? (withEmail / totalProducers * 100).toFixed(0) : 0,
                        totalProducers > 0 ? (withPhone / totalProducers * 100).toFixed(0) : 0,
                        totalProducers > 0 ? (withLocation / totalProducers * 100).toFixed(0) : 0,
                        totalProducers > 0 ? 85 : 0
                    ],
                    backgroundColor: 'rgba(139, 92, 246, 0.2)',
                    borderColor: 'rgba(139, 92, 246, 1)',
                    borderWidth: 2,
                    pointBackgroundColor: 'rgba(139, 92, 246, 1)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgba(139, 92, 246, 1)',
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(10, 14, 39, 0.95)',
                        padding: 12,
                        cornerRadius: 8,
                        callbacks: {
                            label: function(context) {
                                return context.parsed.r + '%';
                            }
                        }
                    }
                },
                scales: {
                    r: {
                        min: 0,
                        max: 100,
                        ticks: {
                            stepSize: 25,
                            font: { size: 10 }
                        },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' },
                        angleLines: { color: 'rgba(255, 255, 255, 0.1)' },
                        pointLabels: { font: { size: 12 } }
                    }
                },
                animation: {
                    duration: 2000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // Contact Methods Chart (Bar)
        const contactCtx = document.getElementById('contactChart');
        const contactChart = new Chart(contactCtx, {
            type: 'bar',
            data: {
                labels: ['Email Only', 'Phone Only', 'Both', 'Neither'],
                datasets: [{
                    label: 'Producers',
                    data: [
                        withEmail - withBothContacts,
                        withPhone - withBothContacts,
                        withBothContacts,
                        totalProducers - withEmail - withPhone + withBothContacts
                    ],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(100, 116, 139, 0.5)'
                    ],
                    borderColor: [
                        'rgba(59, 130, 246, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(245, 158, 11, 1)',
                        'rgba(100, 116, 139, 0.8)'
                    ],
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(10, 14, 39, 0.95)',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(255, 255, 255, 0.05)' },
                        ticks: { font: { size: 11 } }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { font: { size: 11 } }
                    }
                },
                animation: {
                    duration: 2000,
                    easing: 'easeOutQuart'
                }
            }
        });

