            gsap.to('.hero-icon', {
                y: -10,
                duration: 2,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                stagger: 0.3
            });

            gsap.to('.analytics-icon', {
                scale: 1.05,
                duration: 2.5,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                stagger: 0.4
            });

            gsap.to('.role-visual', {
                rotation: 5,
                duration: 3,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                stagger: 0.5
            });

            // Analytics value counter animation
            document.querySelectorAll('.analytics-value').forEach(el => {
                const finalValue = parseInt(el.textContent);
                gsap.to(el, {
                    scrollTrigger: {
                        trigger: el,
                        start: 'top 80%',
                        once: true
                    },
                    textContent: finalValue,
                    duration: 2,
                    snap: { textContent: 1 },
                    ease: 'power2.out'
                });
            });
        }
