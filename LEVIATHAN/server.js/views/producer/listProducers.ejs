            // Hero animations
            gsap.to('.producers-hero::before', { opacity: 1, duration: 1.5, delay: 0.2 });
            
            gsap.to('.hero-icon', {
                opacity: 1,
                scale: 1,
                duration: 0.8,
                stagger: 0.15,
                ease: 'back.out(1.4)',
                delay: 0.3
            });

            gsap.to('.producers-hero h1', {
                opacity: 1,
                y: 0,
                duration: 1,
                delay: 0.6,
                ease: 'power3.out'
            });

            gsap.to('.producers-hero p', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: 0.8,
                ease: 'power3.out'
            });

            gsap.to('.hero-cta', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                delay: 1,
                ease: 'power3.out'
            });

            // Analytics cards
            gsap.to('.analytics-card', {
                scrollTrigger: {
                    trigger: '.analytics-section',
                    start: 'top 70%',
                    end: 'top 30%',
                    scrub: 1
                },
                opacity: 1,
                y: 0,
                stagger: 0.15,
                ease: 'power2.out'
            });

            // Charts section
            gsap.to('.charts-header', {
                scrollTrigger: {
                    trigger: '.charts-section',
                    start: 'top 70%',
                    end: 'top 40%',
                    scrub: 1
                },
                opacity: 1,
                y: 0,
                ease: 'power2.out'
            });

            gsap.to('.chart-card', {
                scrollTrigger: {
                    trigger: '.charts-grid',
                    start: 'top 70%',
                    end: 'top 20%',
                    scrub: 1
                },
                opacity: 1,
                scale: 1,
                stagger: 0.15,
                ease: 'back.out(1.2)'
            });

            // Chart containers fade in after cards
            gsap.to('.chart-container', {
                scrollTrigger: {
                    trigger: '.charts-grid',
                    start: 'top 60%',
                    end: 'top 20%',
                    scrub: 1
                },
                opacity: 1,
                stagger: 0.2,
                ease: 'power2.out',
                onComplete: function() {
                    // Trigger chart animations
                    verificationChart.update('active');
                    locationChart.update('active');
                    timelineChart.update('active');
                    completenessChart.update('active');
                    contactChart.update('active');
                }
            });

            // Role section
            gsap.to('.role-header', {
                scrollTrigger: {
                    trigger: '.role-section',
                    start: 'top 70%',
                    end: 'top 40%',
                    scrub: 1
                },
                opacity: 1,
                y: 0,
                ease: 'power2.out'
            });

            gsap.to('.role-card', {
                scrollTrigger: {
                    trigger: '.role-flow',
                    start: 'top 70%',
                    end: 'top 20%',
                    scrub: 1
                },
                opacity: 1,
                y: 0,
                stagger: 0.2,
                ease: 'power2.out'
            });

            // Section header
            gsap.to('.section-header', {
                scrollTrigger: {
                    trigger: '.producers-section',
                    start: 'top 70%',
                    end: 'top 40%',
                    scrub: 1
                },
                opacity: 1,
                ease: 'power2.out'
            });

            // Producer cards
            gsap.to('.producer-card', {
                scrollTrigger: {
                    trigger: '.producers-grid',
                    start: 'top 70%',
                    end: 'top 20%',
                    scrub: 1
                },
                opacity: 1,
                x: 0,
                stagger: 0.1,
                ease: 'power2.out'
            });

            // Empty state
            gsap.to('.empty-state', {
                scrollTrigger: {
                    trigger: '.empty-state',
                    start: 'top 70%',
                    end: 'top 30%',
                    scrub: 1
                },
                opacity: 1,
                y: 0,
                ease: 'power2.out'
            });

            // Background elements float in
            gsap.to('.bg-package', {
                opacity: 0.05,
                y: -50,
                duration: 8,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                delay: 1
            });

            gsap.to('.bg-container', {
                opacity: 0.05,
                x: 30,
                duration: 10,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                delay: 1.5
            });

            gsap.to('.bg-chain', {
                opacity: 0.05,
                rotation: 10,
                duration: 12,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                delay: 2
