<script>
    // Footer GSAP animations
    if (typeof gsap !== 'undefined' && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        // Animate footer on scroll into view
        gsap.to('.footer-brand', {
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 90%',
                end: 'top 60%',
                scrub: 1
            },
            opacity: 1,
            y: 0,
            ease: 'power2.out'
        });

        gsap.to('.footer-content', {
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 85%',
                end: 'top 55%',
                scrub: 1
            },
            opacity: 1,
            y: 0,
            ease: 'power2.out'
        });

        gsap.to('.footer-section', {
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 85%',
                end: 'top 50%',
                scrub: 1
            },
            opacity: 1,
            y: 0,
            stagger: 0.15,
            ease: 'power2.out'
        });

        gsap.to('.social-icon', {
            scrollTrigger: {
                trigger: '.footer-brand',
                start: 'top 80%',
                end: 'top 50%',
                scrub: 1
            },
            opacity: 1,
            scale: 1,
            stagger: 0.1,
            ease: 'back.out(1.4)'
        });

        gsap.to('.footer-bottom', {
            scrollTrigger: {
                trigger: '.footer-bottom',
                start: 'top 90%',
                end: 'top 70%',
                scrub: 1
            },
            opacity: 1,
            y: 0,
            ease: 'power2.out'
        });

        // Decorative circles float in
        gsap.to('.footer-circle-1', {
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 80%',
                end: 'top 40%',
                scrub: 1
            },
            opacity: 1,
            x: -50,
            ease: 'sine.inOut'
        });

        gsap.to('.footer-circle-2', {
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 75%',
                end: 'top 35%',
                scrub: 1
            },
            opacity: 1,
            x: 50,
            ease: 'sine.inOut'
        });

        // Continuous subtle animations
        gsap.to('.footer-circle-1', {
            y: 20,
            duration: 4,
            repeat: -1,
            yoyo: true,
            ease: 'sine.inOut'
        });

        gsap.to('.footer-circle-2', {
            y: -15,
            duration: 3.5,
