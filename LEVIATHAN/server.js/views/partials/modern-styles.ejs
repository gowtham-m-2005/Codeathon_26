<!-- Common Styles for Forms and Buttons -->
<style>
    .modern-btn {
        padding: 14px 32px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    
    .modern-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
    }
    
    .modern-btn:active {
        transform: translateY(-1px);
    }
    
    .modern-btn.btn-success {
        background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
        box-shadow: 0 4px 15px rgba(81, 207, 102, 0.4);
    }
    
    .modern-btn.btn-success:hover {
        box-shadow: 0 8px 25px rgba(81, 207, 102, 0.5);
    }
    
    .modern-btn.btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
    }
    
    .modern-btn.btn-danger:hover {
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.5);
    }
    
    .modern-btn.btn-info {
        background: linear-gradient(135deg, #4dabf7 0%, #228be6 100%);
        box-shadow: 0 4px 15px rgba(77, 171, 247, 0.4);
    }
    
    .modern-btn.btn-info:hover {
        box-shadow: 0 8px 25px rgba(77, 171, 247, 0.5);
    }
    
    .modern-btn.btn-warning {
        background: linear-gradient(135deg, #ffd43b 0%, #fab005 100%);
        box-shadow: 0 4px 15px rgba(255, 212, 59, 0.4);
        color: #333;
    }
    
    .modern-btn.btn-warning:hover {
        box-shadow: 0 8px 25px rgba(255, 212, 59, 0.5);
    }
    
    .modern-input {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 15px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #fafafa;
        font-family: inherit;
    }
    
    .modern-input:focus {
        outline: none;
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }
    
    .modern-input:hover {
        border-color: #b0b8ea;
    }
    
    .modern-label {
        display: block;
        margin-bottom: 10px;
        color: #333;
        font-weight: 600;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .modern-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 30px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .modern-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }
    
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    
    .modern-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .modern-table th {
        padding: 16px;
        text-align: left;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 13px;
    }
    
    .modern-table td {
        padding: 14px 16px;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .modern-table tbody tr {
        transition: all 0.2s;
    }
    
    .modern-table tbody tr:hover {
        background: #f8f9ff;
        transform: scale(1.01);
    }
    
    .modern-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .badge-success {
        background: linear-gradient(135deg, #d3f9d8 0%, #b2f2bb 100%);
        color: #2b8a3e;
    }
    
    .badge-warning {
        background: linear-gradient(135deg, #fff3bf 0%, #ffec99 100%);
        color: #e67700;
    }
    
    .badge-danger {
        background: linear-gradient(135deg, #ffe3e3 0%, #ffc9c9 100%);
        color: #c92a2a;
    }
    
    .badge-info {
        background: linear-gradient(135deg, #d0ebff 0%, #a5d8ff 100%);
        color: #1864ab;
    }
    
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
    }
    
    .page-header h1 {
        font-size: 42px;
        font-weight: 800;
        margin-bottom: 10px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }
    
    .page-header p {
        font-size: 18px;
        opacity: 0.9;
    }
    
    .container-modern {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 60px;
    }
    
    @media (max-width: 768px) {
        .container-modern {
            padding: 20px;
        }
        .page-header {
            padding: 40px 30px;
        }
        .page-header h1 {
            font-size: 32px;
        }
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script>
    // Initialize GSAP animations for common elements
    document.addEventListener('DOMContentLoaded', function() {
        // Animate cards
        gsap.from('.modern-card', {
            opacity: 0,
            y: 30,
            duration: 0.6,
            stagger: 0.1,
            ease: 'power2.out'
        });
        
        // Animate buttons
        document.querySelectorAll('.modern-btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                gsap.to(this, {
                    scale: 1.05,
                    duration: 0.3,
                    ease: 'back.out(1.7)'
                });
            });
            
            btn.addEventListener('mouseleave', function() {
                gsap.to(this, {
                    scale: 1,
                    duration: 0.3
                });
            });
        });
        
        // Animate table rows
        gsap.from('.modern-table tbody tr', {
            opacity: 0,
            x: -20,
            duration: 0.4,
            stagger: 0.05,
            ease: 'power2.out',
            delay: 0.3
        });
        
        // Page header animation
        gsap.from('.page-header', {
            opacity: 0,
            y: -30,
            duration: 0.8,
            ease: 'power3.out'
        });
        
        gsap.from('.page-header h1', {
            opacity: 0,
            y: 20,
            duration: 0.6,
            delay: 0.3,
            ease: 'back.out(1.7)'
        });
        
        gsap.from('.page-header p', {
            opacity: 0,
            y: 20,
            duration: 0.6,
            delay: 0.4,
            ease: 'power2.out'
        });
    });
</script>
